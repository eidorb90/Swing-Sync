# Dockerfile.dev for Backend
FROM ghcr.io/astral-sh/uv:python3.12-bookworm

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app
ENV UV_SYSTEM_PYTHON=1

# Set work directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libsm6 \
    libxrender1 \
    libxext6 \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*


ENV USE_SQLITE=True


# Expose port 8000
EXPOSE 8000

# Start development server with proper environment setup
CMD ["bash", "-c", "uv sync && cd backend && uv run python manage.py makemigrations && uv run python manage.py migrate && uv run python manage.py runserver 0.0.0.0:8000" ]  